<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/requestFragment">

    <fragment
        android:id="@+id/teammatesFragment"
        android:name="diplom.project.gameconnect.view.fragment.TeammatesFragment"
        android:label="fragment_teammates"
        tools:layout="@layout/fragment_teammates" >
        <action
            android:id="@+id/action_teammatesFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_teammatesFragment_to_requestFragment"
            app:destination="@id/requestFragment"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/requestFragment"
        android:name="diplom.project.gameconnect.view.fragment.RequestFragment"
        android:label="fragment_request"
        tools:layout="@layout/fragment_request" >
        <action
            android:id="@+id/action_requestFragment_to_teammatesFragment"
            app:destination="@id/teammatesFragment"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_requestFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="diplom.project.gameconnect.view.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_teammatesFragment"
            app:destination="@id/teammatesFragment"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profileFragment_to_requestFragment"
            app:destination="@id/requestFragment"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>